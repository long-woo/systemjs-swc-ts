{
  "compilerOptions": {
    "baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
    "declarationDir": "types",
		"sourceMap": true,
		"declarationMap": true,
		"module": "ESNext",
		"target": "ES5",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"strictFunctionTypes": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"lib": ["DOM", "ES6", "ES2015", "ES2017", "ESNext"],
		"types": ["node"]
  },
	"include": ["vite.config.*", "src/**/*"],
  "exclude": ["node_modules"]
}